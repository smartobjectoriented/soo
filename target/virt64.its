/dts-v1/;

/ {
	description = "Kernel and rootfs components for virt64 (armv8) environment";

	images {

  		avz {
			description = "AVZ Hypervisor (64-bit) Polymorphic SO3";
            data = /incbin/("../avz/so3.bin");
			type = "kernel";
            os = "linux";
			arch = "arm64";
			compression = "none";
			load = <0x40080000>;
			entry = <0x40080000>;
		};

		linux {
			description = "Linux kernel";
			data = /incbin/("../linux/linux/arch/arm64/boot/Image");
			type = "avz";
			arch = "arm64";
			os = "linux";
			compression = "none";
			load = <0x50000000>;
			entry = <0x50000000>;
		};

 		avz_pv_dt {
			description = "Flattened Device Tree blob";
			data = /incbin/("../avz/dts/virt64_avz_pv.dtb");
			type = "avz_dt";
			arch = "arm64";
			compression = "none";
			load = <0x40f00000>;
		};
        
         avz_vt_dt {
			description = "Flattened Device Tree blob";
			data = /incbin/("../avz/dts/virt64_avz_vt.dtb");
			type = "avz_dt";
			arch = "arm64";
			compression = "none";
			/* Find a region above the heap to preserve the DT */
			load = <0x46000000>;
		};
		
        fdt {
			description = "Linux device tree blob";
			data = /incbin/("../linux/linux/arch/arm64/boot/dts/arm/virt64.dtb");
			type = "flat_dt";
			arch = "arm64";
			compression = "none";
			load = <0x60000000>;
		};

		initrd {
			description = "Initial rootfs (initrd)";
			data = /incbin/("../linux/rootfs/board/virt64/initrd.cpio");
			type = "ramdisk";
			arch = "arm64";
			os = "linux";			
			compression = "none";
			load = <0x60c00000>;
		};
	};

	configurations {
		default = "agency";
		
		agency {
			description = "SOO Agency on virt64";
		    kernel = "avz";
             loadables = "avz_vt_dt", "linux"; 
             fdt = "fdt"; 
             ramdisk = "initrd"; 
		};
		
	};

};
